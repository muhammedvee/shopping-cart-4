<section>
  <div class="container col-md-6 mt-5">
    <h1 class="text-center">Edit Product</h1>
    <form
      class="mt-5"
      method="post"
      enctype="multipart/form-data"
      action="/admin/edit-product?id={{product._id}}"
    >
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            name="name"
            placeholder=""
            value="{{product.name}}"
          />
        </div>
      </div>

      <div class="form-group row">
        <label for="category" class="col-sm-2 col-form-label">Category</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            name="category"
            placeholder=""
            value="{{product.category}}"
          />
        </div>
      </div>

      <div class="form-group row">
        <label for="price" class="col-sm-2 col-form-label">Price</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            name="price"
            placeholder=""
            value="{{product.price}}"
          />
        </div>
      </div>

      <div class="form-group row">
        <label
          for="description"
          class="col-sm-2 col-form-label"
        >Description</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            name="description"
            placeholder=""
            value="{{product.description}}"
          />
        </div>
      </div>

      <label for="image"></label>
      <img src="/product-images/{{product._id}}.jpg" style="width:100px;height:100px" alt="" id="imgView" class="pt-3"/>
      <input type="file" name="image" class="form-control" onchange="viewImage(event)">

      <div class="form-group row">
        <div class="col-sm-10 d-flex justify-content-end">
          <button type="submit" class="btn btn-primary mt-4">Update</button>
        </div>
      </div>

    </form>
  </div>
</section>
<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>