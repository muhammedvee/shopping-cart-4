<section>
  <div class="container">
    <a href="/admin/add-product" class="btn btn-success mt-5 ml-auto">Add Product</a>
    <table class="table mt-5" >
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody class="">
        {{#each products}}
          <tr>
            <td></td>
            <td scope="row">{{this.name}}</td>
            <td>{{this.category}}</td>
            <td>{{this.description}}</td>
            <td><img src="/product-images/{{this._id}}.jpg" alt="" style="width: 80px;height:80px" /></td>
            <td>
              {{!-- <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a> --}}
              <a href="/admin/edit-product?id={{this._id}}" class="btn btn-primary">Edit</a>
              <a href="/admin/delete-product?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure to delete {{this.name}}?. Click ok if YES.')">Delete</a>
              </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>